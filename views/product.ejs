<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/product.css">
    <script src="https://unpkg.com/js-alert/dist/jsalert.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Products</title>
  <link rel="shortcut icon" href="/images/logoewaste.jpeg" type="image/x-icon">
</head>
<body>
  
    <header>
    
        <h1>E-Waste Products for Sell</h1>
  <a href="/"> <span class="material-symbols-outlined">
            home
            </span></a>
        <a href="/cart"><span class="material-symbols-outlined">
            shopping_cart
            </span></a>
            <a href="/dashBoard">
                <span class="material-symbols-outlined">
                    account_circle
                    </span>
            </a>
            <a href="/logout">
                <span class="material-symbols-outlined">
                    logout
                    </span>
            </a>
    </header>
    <main>
        <% data.forEach(function(item) { %>
         
            <section class="product">
                <img src="data:image/<%=item.image.contentType%>;base64,<%=item.image.data.toString('base64')%>" alt="" srcset="">
              
                <div class="product-info">
                    <h2><%=item.nameOfProduct %></h2>
                    <p><%=item.discription %></p>
                    <span class="price"><%=item.price %></span>
                    <button class="buy-button">Buy Now</button>
                </div>
            </section>
         <% }); %> 
        
        <section class="product">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcReBgU_zf96sHHj9nmVjTXYeS8rRzWmi0TvPmaG3G6uGLDXB7E0PRcSg8MMYBS6XR8CMoQ&usqp=CAU" alt="Product 2">
            <div class="product-info">
                <h2>Storage Bulb</h2>
                <p>A stylish bulb-shaped storage container for keeping small items. Functional and decorative.</p>
                <span class="price">19.99</span>
                <button class="buy-button">Buy Now</button>
            </div>
        </section>
        <section class="product">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQAK3fL6ajFSujWpt4wyr4VQgXfoYL3Uv4k4ScgbYGipu9nDIbuxAPT-ua33JZxbWdUfZQ&usqp=CAU" alt="Product 3">
            <div class="product-info">
                <h2>Monitor Aquarium</h2>
                <p>Turn your old computer monitor into a captivating aquarium. An eco-friendly and mesmerizing home for aquatic life.</p>
                <span class="price">349.99</span>
                <button class="buy-button">Buy Now</button>
            </div>    
        </section>
        <section class="product">
            <img src="data:image/jpeg;base64," alt="Product 4">
            <div class="product-info">
                <h2>GreenTech Laptop</h2>
                <p>A refurbished laptop made from recycled e-waste components. High performance and eco-friendly.</p>
                <span class="price">449.99</span>
                <button class="buy-button">Buy Now</button>
            </div>
        </section>
        <section class="product">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT8XyNgwRIfrtnGaY2LLQrv8ye4duS0FtDnHQ&usqp=CAU" alt="Product 5">
            <div class="product-info">
                <h2>Eco-Smartphone</h2>
                <p>Stay connected sustainably with our eco-friendly smartphone, featuring a recycled body and efficient components.</p>
                <span class="price">299.99</span>
                <button class="buy-button">Buy Now</button>
            </div>
        </section>
        
        <!-- Add more product sections here -->
        <div id="product-details-modal" class="modal">
            <div class="modal-content">
                <span class="close-button">&times;</span>
                <img class="modal-image" src="" alt="" width="300px" height="250px">
                <div class="modal-info">
                    <h2 class="modal-product-name"></h2>
                    <p class="modal-product-description"></p>
                    <span class="modal-product-price"></span>
                    <button class="add-to-cart-button" onclick="add()" >Add to Cart</button>
                </div>
            </div>
        </div>
    </main>

<script>
 async function add(){
    const config = { headers: { "Content-Type": "application/json" } };
    const product={
        nameOfProduct:   document.querySelector('.modal-product-name').textContent,
        img: document.querySelector('.modal-image').src,
        price:  document.querySelector('.modal-product-price').textContent,
        discription:document.querySelector('.modal-product-description').textContent,
 
    }
    const data=  await axios.post('/addToCart',product);
   
    JSAlert.alert("<code >item added succesfully </code >",null,JSAlert.Icons.Success).dismissIn(1000 * 1);
       
     }
</script>
    <script src="/javascripts/product.js"></script>
</body>
</html>
